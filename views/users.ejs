<script>
  //给新增的提交按钮注册点击事件:(通过事件委托给提交按钮绑定点击事件)
  $('#form').on('click', 'button[type="submit"]', function (e) {
    //阻止默认行为
    e.preventDefault();
    //2. 使用 form 对象中的 serlialize 方法来接收参数
    var parmas = $('#form').serialize();
    //3. 提交数据
    $.ajax({
      url: '/addUser',
      method: 'POST',
      data: parmas,
      dataType: 'JSON',
      success: res => {
        //逻辑处理
        let { status, msg } = res; //解构赋值
        if (status === 200) {
          alert(msg);
          //重新渲染所有用户数据
          getAllusers();
        } else {
          alert(msg);
        }
      }
    })
  })
  // 封装一个用来渲染用户列表的方法
  function getAllusers() {
    $.ajax({
      url: '/getAllusers',
      method: 'GET',
      dataType: 'JSON',
      success: res => {
        let { status } = res; //解构赋值
        if (status === 200) {
          let trHtml = template('tmp', res);
          $('#tbody').html(trHtml);
        } else {
          alert('出错啦')
        }
      }
    })
  }
  //给删除的按钮绑定一个点击事件:(通过事件委托给提交按钮绑定点击事件)
  $('#tbody').on('click', '.btn-danger', function () {
    if (confirm("你确定真的要删除吗?")) {
      //获取id
      var id = $(this).attr('id');
      $.ajax({
        url: '/delUser?id=' + id,
        method: 'GET',
        success: function (res) {
          let { status, msg } = res; //解构赋值
          if (status === 200) {
            alert(msg);
            //重新渲染所有用户数据
            getAllusers();
          } else {
            alert('出错了');
          }
        }
      })
    }
  })
  //给编辑按钮绑定一个点击事件:(通过事件委托给提交按钮绑定点击事件)
  $('#tbody').on('click', '.btn-default', function (e) {
    //阻止默认事件
    e.preventDefault();

  })
</script>